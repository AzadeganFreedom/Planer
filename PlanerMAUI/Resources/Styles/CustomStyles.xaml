<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanerMAUI.Resources.Styles.CustomStyles">

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="RoyalBlue" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="BorderColor" Value="RoyalBlue" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="8"/>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light= White, Dark= Black}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="BorderColor" Value="RoyalBlue" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light= RoyalBlue, Dark= White}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="8"/>
    </Style>

    <Style x:Key="InputField" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light= White, Dark= Black}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light= Black, Dark= White}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="#C8C8C8" />
    </Style>

</ResourceDictionary>